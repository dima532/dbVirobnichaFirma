@page
@model RegModel
@using VirobnichaFirma.DAL
@{
    ViewData["Title"] = "Registration";
}

<h2>Регистрация</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Account!.Id" value="0"/>
            <input type="hidden" asp-for="Account!.Type" value="0"/>
            <div class="form-group">
                <label asp-for="Account!.Login" class="control-label"></label>
                <input asp-for="Account!.Login" class="form-control" />
                <span asp-validation-for="Account!.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account!.Password" class="control-label"></label>
                <input asp-for="Account!.Password" asp-items="Model.Countries" class="form-control" type="password"></input>
                <span asp-validation-for="Account!.Password" class="text-danger"></span>
            </div>
            <p/>
            <p/>
            <p/>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Сохранить"/>
                <a href="Index" class="btn btn-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>