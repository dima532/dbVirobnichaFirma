@page
@model AffiliateModel
@using VirobnichaFirma.DAL
@{
    ViewData["Title"] = "Coutry";
}

<h1>Редактирование</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Affiliate!.Id" />
            <div class="form-group">
                <label asp-for="Affiliate!.AffiliateName" class="control-label"></label>
                <input asp-for="Affiliate!.AffiliateName" class="form-control" />
                <span asp-validation-for="Affiliate!.AffiliateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Affiliate!.CityId" class="control-label"></label>
                <select asp-for="Affiliate!.CityId" asp-items="Model.Cities" class="form-select"></select>
                <span asp-validation-for="Affiliate!.CityId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Affiliate!.Street" class="control-label"></label>
                <input asp-for="Affiliate!.Street" class="form-control"></input>
                <span asp-validation-for="Affiliate!.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Affiliate!.House" class="control-label"></label>
                <input asp-for="Affiliate!.House" class="form-control"></input>
                <span asp-validation-for="Affiliate!.House" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Affiliate!.Number" class="control-label"></label>
                <input asp-for="Affiliate!.Number" class="form-control"></input>
                <span asp-validation-for="Affiliate!.Number" class="text-danger"></span>
            </div>
            <p/>
            <p/>
            <p/>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Сохранить"/>
                <a href="Affiliates" class="btn btn-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>