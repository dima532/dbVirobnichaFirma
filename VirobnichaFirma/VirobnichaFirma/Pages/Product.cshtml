@page
@model ProductModel
@using VirobnichaFirma.DAL
@{
    ViewData["Title"] = "Coutry";
}

<h1>Редактирование</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product!.Id" />
            <div class="form-group">
                <label asp-for="Product!.ProductName" class="control-label"></label>
                <input asp-for="Product!.ProductName" class="form-control" />
                <span asp-validation-for="Product!.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product!.Price" class="control-label"></label>
                <input asp-for="Product!.Price" class="form-control" />
                <span asp-validation-for="Product!.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product!.CostPrice" class="control-label"></label>
                <input asp-for="Product!.CostPrice" class="form-control" />
                <span asp-validation-for="Product!.CostPrice" class="text-danger"></span>
            </div>
            <p/>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Сохранить"/>
                <a href="Products" class="btn btn-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>