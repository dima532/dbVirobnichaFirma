@page
@model OrderCreationModel
@using VirobnichaFirma.DAL
@{
    ViewData["Title"] = "Coutry";
}

<h1>Редактирование</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <table class="table">
            <tr>
                <th>ID</th>
                <th>Login</th>
                <th>Тип акаунта</th>
                <th></th>
            </tr>
            @{
                for (int i=0; i<Model.OCForm.Count; i++)
                { 
                        <tr>
                            <td>
                                <label asp-for="OCForm[i]!.ProductId" class="control-label"></label>
                                <input asp-for="OCForm[i]!.ProductId" class="form-control" />
                                <span asp-validation-for="OCForm[i]!.ProductId" class="text-danger"></span>
                            </td>
                            <td>
                                <label asp-for="OCForm[i]!.Amount" class="control-label"></label>
                                <input asp-for="OCForm[i]!.Amount" class="form-control" />
                                <span asp-validation-for="OCForm[i]!.Amount" class="text-danger"></span>
                            </td>
                            <td align="right">
                                <button type="submit" class="btn btn-outline-danger btn-sm" 
                                asp-page-handler="delete" asp-route-id="i">Удалить</button>
                            </td>
                        </tr>
                }
            }
            </table>
            <p/>
            <p/>
            <p/>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Сохранить"/>
                <a href="cities" class="btn btn-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>