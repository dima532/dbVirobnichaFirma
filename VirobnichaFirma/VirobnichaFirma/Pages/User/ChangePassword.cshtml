@page
@model ChangePasswordModel
@using VirobnichaFirma.DAL
@{
    ViewData["Title"] = "Coutry";
}

<h1>Редактирование</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CPForm!.PreviousPassword" class="control-label"></label>
                <input asp-for="CPForm!.PreviousPassword" class="form-control" />
                <span asp-validation-for="CPForm!.PreviousPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPForm!.NewPassword" class="control-label"></label>
                <input asp-for="CPForm!.NewPassword" asp-items="Model.Countries" class="form-select"/>
                <span asp-validation-for="CPForm!.NewPassword" class="text-danger"></span>
            </div>
            <p/>
            <p/>
            <p/>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Сохранить"/>
                <a href="Profile" class="btn btn-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>