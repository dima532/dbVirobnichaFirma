@page
@model AccountModel
@using VirobnichaFirma.DAL
@{
    ViewData["Title"] = "Registration";
}

<h2>Регистрация</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Account!.Id"/>
            <input type="hidden" asp-for="Account!.Password"/>
            <input type="hidden" asp-for="Account!.CustomerId"/>
            <div class="form-group">
                <label asp-for="Account!.Login" class="control-label"></label>
                <input asp-for="Account!.Login" class="form-control" readonly/>
                <span asp-validation-for="Account!.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account!.Type" class="control-label"></label>
                <input asp-for="Account!.Type" class="form-control"></input>
                <span asp-validation-for="Account!.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
            </div>
            <p/>
            <p/>
            <p/>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Сохранить"/>
                <a href="Accounts" class="btn btn-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>