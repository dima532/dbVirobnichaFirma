@page
@model EmployeeModel
@using VirobnichaFirma.DAL
@{
    ViewData["Title"] = "Coutry";
}

<h1>Редактирование</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee!.Id" />
            <div class="form-group">
                <label asp-for="Employee!.EmployeeName" class="control-label"></label>
                <input asp-for="Employee!.EmployeeName" class="form-control" />
                <span asp-validation-for="Employee!.EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee!.JobtitleId" class="control-label"></label>
                <select asp-for="Employee!.JobtitleId" asp-items="Model.Jobtitles" class="form-select"></select>
                <span asp-validation-for="Employee!.JobtitleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee!.Number" class="control-label"></label>
                <input asp-for="Employee!.Number" class="form-control"></input>
                <span asp-validation-for="Employee!.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee!.BossId" class="control-label"></label>
                <input asp-for="Employee!.BossId" class="form-control"></input>
                <span asp-validation-for="Employee!.BossId" class="text-danger"></span>
            </div>
            <p/>
            <p/>
            <p/>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Сохранить"/>
                <a href="Employees" class="btn btn-secondary">Назад</a>
            </div>
        </form>
    </div>
</div>